{
    "license": "LICENSE",
    "licenseFormats": {
        "js|ts|css|scss|less|php|as|c|java|cpp|go|cto|acl": {
            "prepend": "/*",
            "append": " */",
            "eachLine": {
                "prepend": " * "
            }
        },
        "njk": {
            "prepend": "<!--",
            "append": "-->"
        },
        "bazel|bzl": {
            "eachLine": {
                "prepend": " # "
            }
        }
    },
    "ignore": ["license_check*"]
}