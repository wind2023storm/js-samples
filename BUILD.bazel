    # config files
    ":.eslintrc.json",
    "//samples:.eslintrc.json",
    # plugins
    "@npm//eslint-config-prettier",
    "@npm//eslint-plugin-jest",
    "@npm//eslint-plugin-prettier",
    "@npm//@typescript-eslint/parser",
    "@npm//@typescript-eslint/eslint-plugin",
]

